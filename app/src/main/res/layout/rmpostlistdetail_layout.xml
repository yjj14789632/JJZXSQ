<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listrmpost"
    >
    <Space android:layout_height="5dp"
        android:layout_width="match_parent"/>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <RelativeLayout android:layout_height="25dp"
            android:layout_width="25dp">
            <ImageView
                android:id="@+id/userNick"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_centerInParent="true"
                android:layout_margin="8dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/rec1"
                android:scaleType="fitXY"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
            <TextView
                android:id="@+id/postusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listrmpost"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/posttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/postpic1"
            android:layout_height="125dp"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/postpic2"
            android:layout_height="125dp"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp">
    </LinearLayout>
</LinearLayout>



